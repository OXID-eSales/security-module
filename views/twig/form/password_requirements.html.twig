{% set moduleSettings = oViewConf.getSecurityModuleSettings() %}

<div id="password-requirements" class="card border border-primary m-3 p-4 d-none">
    <div class="card-body m-0 p-0">
        {% if moduleSettings.getPasswordMinimumLength() %}
            <div>{{ translate({ ident: 'PASSWORD_MIN_LENGTH', args: moduleSettings.getPasswordMinimumLength() }) }}</div>
        {% endif %}

        {% if moduleSettings.getPasswordUppercase() %}
            <div>{{ translate({ ident: 'PASSWORD_CONTAIN_UPPER_CASE' }) }}</div>
        {% endif %}

        {% if moduleSettings.getPasswordLowercase() %}
            <div>{{ translate({ ident: 'PASSWORD_CONTAIN_LOWER_CASE' }) }}</div>
        {% endif %}

        {% if moduleSettings.getPasswordDigit() %}
            <div>{{ translate({ ident: 'PASSWORD_CONTAIN_DIGIT' }) }}</div>
        {% endif %}

        {% if moduleSettings.getPasswordSpecialChar() %}
            <div>{{ translate({ ident: 'PASSWORD_CONTAIN_SPECIAL_CHARACTER' }) }}</div>
        {% endif %}
    </div>
</div>
